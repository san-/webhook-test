# Configurações básicas da aplicação
APP_NAME="Webhook Dashboard"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost

APP_LOCALE=pt
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=pt_BR

# Configurações de manutenção
APP_MAINTENANCE_DRIVER=file

# Configurações de log otimizadas
LOG_CHANNEL=single
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# CONFIGURAÇÕES DE BANCO OTIMIZADAS
# Para SQLite (recomendado para hosts com poucos recursos)
DB_CONNECTION=sqlite
DB_DATABASE=/absolute/path/to/database/database.sqlite

# Configurações SQLite otimizadas
DB_BUSY_TIMEOUT=30000
DB_JOURNAL_MODE=WAL
DB_SYNCHRONOUS=NORMAL

# Para MySQL (descomente se usar MySQL)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=webhook_dashboard
# DB_USERNAME=your_username
# DB_PASSWORD=your_password
# DB_MAX_CONNECTIONS=5

# Configurações de sessão otimizadas
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Configurações de cache otimizadas (usar file ao invés de database)
CACHE_STORE=file
CACHE_PREFIX=webhook_

# Configurações de broadcast
BROADCAST_CONNECTION=log

# Configurações de filesystem
FILESYSTEM_DISK=local

# Configurações de queue (usar sync para evitar sobrecarga)
QUEUE_CONNECTION=sync

# Configurações de mail
MAIL_MAILER=log
MAIL_HOST=null
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Configurações opcionais de performance
PHP_CLI_SERVER_WORKERS=2
BCRYPT_ROUNDS=10

# Configurações de memória (ajuste conforme necessário)
MEMORY_LIMIT=256M
MAX_EXECUTION_TIME=60

# Para hosts muito limitados, desative features desnecessárias
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false